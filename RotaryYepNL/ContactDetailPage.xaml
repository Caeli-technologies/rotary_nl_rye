<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RotaryYepNL.ContactDetailPage"
             Title="Contact details"
             Shell.TabBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout Padding="20"
                             Spacing="12">
            <Label x:Name="NameLabel"
                   FontAttributes="Bold"
                   FontSize="20"/>
            <Label x:Name="FunctionLabel"
                   Opacity="0.8"/>

            <Image x:Name="ProfileImage"
                   HeightRequest="120"
                   WidthRequest="120"
                   Aspect="AspectFill"
                   HorizontalOptions="Center"/>

            <Label x:Name="BioLabel"/>

            <VerticalStackLayout Spacing="6">
                <Label Text="Contact"
                       FontAttributes="Bold"/>
                <Label x:Name="EmailLabel"/>
                <Label x:Name="PhoneLabel"/>
                <Label x:Name="ClubLabel"
                       Opacity="0.9"/>
                <Label x:Name="DistrictLabel"
                       Opacity="0.9"/>
            </VerticalStackLayout>

            <HorizontalStackLayout Spacing="12"
                                   HorizontalOptions="Center">
                <Button Text="Call"
                        x:Name="CallButton"/>
                <Button Text="Email"
                        x:Name="EmailButton"/>
                <Button Text="Website"
                        x:Name="WebsiteButton"/>
            </HorizontalStackLayout>

            <Button Text="Close"
                    x:Name="CloseButton"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
