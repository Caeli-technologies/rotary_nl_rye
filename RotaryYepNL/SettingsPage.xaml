<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             x:Class="RotaryYepNL.SettingsPage"
             Title="Settings"
             Shell.TabBarIsVisible="True">

    <ContentPage.Resources>
        <FontImageSource x:Key="ShareMaterial"
                         Glyph="{mi:Material Icon=Share}"/>
        <FontImageSource x:Key="ShareCupertino"
                         Glyph="{mi:Cupertino Icon=SquareArrowUp}"/>
        <FontImageSource x:Key="ChevronIcon"
                         Glyph="{mi:Material Icon=ChevronRight}"
                         Size="20"
                         Color="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray600}}"/>
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="ShareToolbarItem"
                     Text="Share"
                     Clicked="OnShareClicked"/>
    </ContentPage.ToolbarItems>

    <TableView Intent="Settings"
               HasUnevenRows="True">
        <TableRoot>
            <!-- General Section -->
            <TableSection Title="Algemeen">
                <TextCell Text="Volg ons op Instagram"
                          Detail="@rotexnederland"
                          Tapped="OnInstagramClicked"/>

                <TextCell Text="Beoordeel de App"
                          Detail="Laat een beoordeling achter in de App Store"
                          Tapped="OnStoreReviewClicked"/>
            </TableSection>

            <!-- Development Section -->
            <TableSection Title="Ontwikkeling">
                <TextCell Text="Bijdragers"
                          Detail="Bekijk app-bijdragers"
                          Tapped="OnContributorsClicked"/>

                <TextCell x:Name="VersionCell"
                          Text="App Versie"/>
            </TableSection>

            <!-- Legal Section -->
            <TableSection Title="Juridisch">
                <TextCell Text="Privacybeleid"
                          Tapped="OnPrivacyClicked"/>

                <TextCell Text="Algemene Voorwaarden"
                          Tapped="OnTermsClicked"/>
            </TableSection>

            <!-- Footer Section -->
            <TableSection>
                <ViewCell>
                    <VerticalStackLayout Spacing="6"
                                         Padding="16,20"
                                         HorizontalOptions="Center">
                        <Label Text="Rotary Youth Exchange Netherlands"
                               Style="{StaticResource Caption}"
                               HorizontalTextAlignment="Center"/>
                        <Label Text="Gemaakt met ❤️ voor jonge wereldburgers"
                               Style="{StaticResource Caption}"
                               HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>
                </ViewCell>
            </TableSection>
        </TableRoot>
    </TableView>

</ContentPage>